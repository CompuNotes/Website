---
import MenuBar from '../components/MenuBar.astro';
import Footer from '../components/Footer.astro';
import SidebarMyArea from '../components/SidebarMyArea.astro';
import "../styles/global.css";

---
<MenuBar />
<main>
    <SidebarMyArea />
    <div class="container">
        
        <div class="content">
            <div class="upload-section">
                <div class="upload-columns">
                    <div class="column">
                        <button class="upload-btn rounded-lg bg-blue-500 hover:bg-blue-600" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;">
                            Upload new document
                        </button>
                        <input class="rounded-lg" type="text" placeholder="Insert a name for the document" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;"/>
                        <input class="rounded-lg" type="text" placeholder="Write tags for the document" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;"/>
                    </div>
                    <div class="column">
                        <select class="rounded-lg" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;">
                            <option>Select degree</option>
                            <option>Computer science</option>
                        </select>
                        <select class="rounded-lg" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;">
                            <option>Select academic year</option>
                            <option>First year</option>
                            <option>Second year</option>
                            <option>Third year</option>
                            <option>Fourth year</option>
                        </select>
                        <select class="rounded-lg" style="
                            padding: 10px;
                            border: 1px solid #ccc;
                            width:100%;">
                            <option>Select course</option>
                            <option>course 1</option>
                            <option>course 2</option>
                            <option>course 3</option>
                            <option>course 4</option>
                            <option>course 5</option>
                        </select>
                    </div>
                </div>
                <button class="save-btn rounded-lg bg-blue-500 hover:bg-blue-600 flex" style="margin-top: 20px;">Upload to CompuNotes</button>
            </div>
            <div class="documents-section">
                
                <div class="relative max-w-xl mx-auto searchbar">
                    <input
                      type="text"
                      placeholder="Search for a document name"
                      class="w-full p-4 pl-12 rounded-full shadow-md"
                    />
                    <svg
                      class="absolute top-1/2 left-4 transform -translate-y-1/2 h-6 w-6 text-gray-500"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path stroke="none" d="M0 0h24v24H0z"></path>
                      <circle cx="10" cy="10" r="7"></circle>
                      <line x1="21" y1="21" x2="15" y2="15"></line>
                    </svg>
                  </div>
                <h2>My documents</h2>
            </div>
        </div>
    </div>
</main>
<Footer />

<style>
  main {
      display: flex;
      background-color: #f3f4f6;
  }
  .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
  }

  .content {
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  .upload-section {
      background-color: #f3f4f6;
      padding: 20px;
      border-radius: 8px;
  }

  .upload-columns {
      display: flex;
      gap: 20px;
  }

  .column {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 10px;
  }

  .upload-btn, .save-btn {
      color: white;
      border: none;
      padding: 10px 15px;
      cursor: pointer;
      transition: background-color 0.3s;
  }

  .save-btn {
    justify-self: center;
    justify-content: center;
    width: 50%;
  }

  .documents-section {
      background-color: #f3f4f6;
      padding: 20px;
      border-radius: 8px;
  }

  h2 {
      margin: 10px 0;
      font-size: 1.5rem;
      color: #333;
  }
</style>

