---
import MenuBar from "../components/MenuBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!--Revert -->
<MenuBar />

<main class="flex p-8">
  <!-- Document Preview -->
  <section class="w-2/3 flex justify-center">
    <div
      class="bg-white shadow-md p-8 w-2/3 min-h-[800px] flex flex-col items-center"
    >
      <p class="text-gray-500 mt-40">Document first page preview</p>
      <div class="mt-auto flex gap-4 pt-10">
        <button class="border rounded-full p-2"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 15l7-7 7 7"></path>
          </svg>
        </button>
        <button class="border rounded-full p-2"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <button class="bg-blue-300 px-4 py-2 rounded flex items-center gap-1">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 5v14l7-5 7 5V5a2 2 0 00-2-2H7a2 2 0 00-2 2z"></path>
          </svg>
          Save
        </button>
      </div>
    </div>
  </section>

  <!-- Info Sidebar -->
  <aside class="w-1/3 px-8">
    <h2 class="text-xl font-semibold mb-1">Document name</h2>
    <p class="text-gray-500 text-sm mb-2">Username</p>
    <div class="flex space-x-2 mb-4">
      <span class="bg-gray-200 text-xs px-2 py-1 rounded">Tag</span>
      <span class="bg-gray-200 text-xs px-2 py-1 rounded">Tag</span>
      <span class="bg-gray-200 text-xs px-2 py-1 rounded">Tag</span>
    </div>

    <p class="mb-2 font-medium">Rate the document</p>
    <div class="flex mb-6 space-x-1 text-2xl text-gray-500">
      <div class="flex justify-between items-center mt-2">
        <svg
          class="h-6 w-6 text-yellow-500"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z"></path>
          <path
            d="M12 17.75l-6.172 3.245 1.179-6.873-4.993-4.867 6.9-1.002L12 2l3.086 6.253 6.9 1.002-4.993 4.867 1.179 6.873z"
          ></path>
        </svg>
      </div>
    </div>

    <button
      class="flex items-center gap-2 bg-blue-300 px-4 py-2 rounded text-white font-semibold mb-6"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"
        ></path>
      </svg>
      Download document
    </button>

    <div>
      <p class="font-medium mb-2">Comments</p>
      <input
        type="text"
        placeholder="Write a comment..."
        class="w-full p-2 mb-4 border border-gray-300 rounded"
      />

      <!-- Comments -->
      {
        [1, 2, 3].map((_, i) => (
          <div class="flex items-start space-x-2 mb-4">
            <img
              src="/src/assets/person-circle-outline.png"
              alt="User"
              class="w-10 h-10 rounded-full"
            />
            <div>
              <p class="font-semibold text-sm">Username</p>
              <p class="text-sm text-gray-600">
                Lorem ipsum dolor sit amet consectetur adipiscing elit, felis
                lacus sapien imperdiet eu tempus cum.
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </aside>
</main>

<Footer />
