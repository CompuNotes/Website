---
title: "Sign up"
import "../styles/global.css";
---

<div class="flex items-center justify-center min-h-screen bg-gray-200">
  <div class="bg-blue-300 p-8 rounded-lg shadow-md w-96">
    <h2 class="text-white text-center text-xl font-bold mb-4">Sign up</h2>
    <form>
      <input type="text" placeholder="Username" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <input type="email" placeholder="Email" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <input type="password" placeholder="Password" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <input type="password" placeholder="Confirm password" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <button class="w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600">Sign up</button>
    </form>
  </div>
</div>
