---
layout: "../layouts/BaseLayout.astro"
title: "Log in"
import "../styles/global.css";
---

<div class="flex items-center justify-center min-h-screen bg-gray-200">
  <div class="bg-blue-300 p-8 rounded-lg shadow-md w-96">
    <h2 class="text-white text-center text-xl font-bold mb-4">Log in</h2>
    <form>
      <input type="text" placeholder="Email or username" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <input type="password" placeholder="Password" class="w-full p-2 mb-4 rounded-lg border-none outline-none" />
      <button class="w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600">Log in</button>
    </form>
    <div class="mt-4 text-center text-sm text-gray-700">
      <p>Don't have an account?</p>
      <p>Don't remember your password?</p>
    </div>
  </div>
</div>
