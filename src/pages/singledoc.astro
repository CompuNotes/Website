---
import MenuBar from "../components/MenuBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<MenuBar />

<div class="min-h-screen bg-gray-200 p-8 flex justify-center">
  <div class="w-full max-w-7xl bg-white shadow-md rounded-lg p-6 flex space-x-8">
    
    <!-- Left Side: Document Viewer -->
    <div class="flex-1 justify-center bg-gray-100 p-6 rounded-lg items-center">
      <div class="w-full h-[500px] bg-gray-300 flex items-center justify-center rounded-lg">
        <img src="https://placehold.co/600x700" alt="Document preview" class="rounded-lg" />
      </div>
      
      <!-- Up & Down Buttons Below the Document -->
      <div class="flex  justify-center space-x-4 mt-4 mb-4">
        <button class="bg-blue-500 text-white w-12 h-12 flex items-center justify-center rounded-full hover:bg-blue-600">
          <img src="https://placehold.co/50x50" alt="Up" />
        </button>
        <button class="bg-blue-500 text-white w-12 h-12 flex items-center justify-center rounded-full hover:bg-blue-600">
          <img src="https://placehold.co/50x50" alt="Down" />
        </button>

        <button class="mt-1 bg-blue-500 text-white px-6 py-3 rounded-lg cursor-not-allowed">Save</button>
      </div>

    </div>

    <!-- Right Side: Document Details -->
    <div class="m-8 grid auto-cols-max grid-flow-col p-4 ">
      <h2 class="text-3xl font-semibold">Document Name</h2>
      <p class="text-gray-500 mt-1">Username <span class="text-sm text-gray-400"> Date</span></p>

      <!-- Rating -->
      <div class="mt-6">
        <p class="font-semibold text-lg">Rate the document</p>
        <div class="flex space-x-4 mt-2">
          <img src="https://placehold.co/35x35" alt="Star" />
          <img src="https://placehold.co/35x35" alt="Star" />
          <img src="https://placehold.co/35x35" alt="Star" />
          <img src="https://placehold.co/35x35" alt="Star" />
          <img src="https://placehold.co/35x35" alt="Star" />
        </div>
      </div>

      <button class="my-4 bg-blue-500 text-white rounded-lg hover:bg-blue-600 text-lg font-semibold">
        <span>Download document</span>
      </button>

      <!-- Comments Section -->
      <div class="mt-8">
        <h3 class="text-xl font-semibold">Comments</h3>
        <input 
          type="text" 
          placeholder="Write a comment..." 
          class="w-full p-3 border rounded-lg mt-3"
        />
        
        <!-- Comment List -->
        <div class="mt-6 space-y-4">
          <div class="p-4 bg-gray-100 rounded-lg flex items-start space-x-4">
            <img src="https://via.placeholder.com/50" alt="User Avatar" class="rounded-full" />
            <div>
              <p class="font-semibold text-gray-800">Username</p>
              <p class="text-gray-600 text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
            </div>
          </div>
          <div class="p-4 bg-gray-100 rounded-lg flex items-start space-x-4">
            <img src="https://via.placeholder.com/50" alt="User Avatar" class="rounded-full" />
            <div>
              <p class="font-semibold text-gray-800">Username</p>
              <p class="text-gray-600 text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
            </div>
          </div>
          <div class="p-4 bg-gray-100 rounded-lg flex items-start space-x-4">
            <img src="https://via.placeholder.com/50" alt="User Avatar" class="rounded-full" />
            <div>
              <p class="font-semibold text-gray-800">Username</p>
              <p class="text-gray-600 text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<Footer />